                }
            ]
        },
        {
            "name": "apps build",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "node ./node_modules/octopus/scripts/setEnv --file=../../../env.json \"node ./bin/octopusRun.js buildApps\""
                }
            ]
        }
